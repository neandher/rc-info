{% extends 'site/base.html.twig' %}

{% block body %}

    <h3>√Årea do Cliente</h3>

    <br>

    {{ form_start(form, { 'action': path('site_login_check') }) }}

    <div class="row">
        <div class="col-lg-12">

            {{ include('_partials/_flash_messages.html.twig') }}

            {{ form_row(form._username, {'attr':{'value': last_username }}) }}
            {{ form_row(form._password) }}
            {{ form_row(form._remember_me) }}

            <div class="row">
                <div class="form-group col-md-6">
                    <button class="btn btn-primary">{{ 'user.login.btns.login'|trans }}</button>
                    <a class="pull-right" href="{{ path('site_resetting_request') }}">
                        {{ 'user.login.links.forgot_password'|trans }}
                    </a>
                </div>
            </div>

        </div>
    </div>

    {{ form_widget(form._token) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}