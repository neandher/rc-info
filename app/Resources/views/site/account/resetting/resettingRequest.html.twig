{% extends 'site/base.html.twig' %}

{% block body %}

    <h3>{{ 'user.resetting.request.title'|trans }}</h3>

    {{ form_start(form, { 'action': path('site_resetting_request') }) }}

    <div class="row">
        <div class="col-lg-12">

            {{ include('_partials/_flash_messages.html.twig') }}

            {{ form_errors(form) }}

            {{ form_row(form.email) }}

            <div class="row">
                <div class="form-group col-md-6">
                    <button class="btn btn-primary">{{ 'user.resetting.request.btns.send'|trans }}</button>

                    <a class="pull-right" href="{{ path('site_login') }}">
                        {{ 'user.resetting.request.links.login'|trans }}
                    </a>
                </div>
            </div>

        </div>
    </div>

    {{ form_widget(form._token) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}