{% extends 'admin/base.html.twig' %}

{% block page_content %}

    {% embed 'admin/_partials/_default_resource.html.twig' with {'route_index' : 'admin_downloads_index'} %}

        {% block form_start %}
            {{ form_start(form, {'action': path('admin_downloads_new') ~ pagination.buildQuery,
                'attr' : {'class' : '_form-horizontal'}}) }}
        {% endblock %}

        {% block icon_list %}
            <i class="icon-link font-green-sharp bold"></i>
        {% endblock %}

        {% block caption_subject %}
            <span class="caption-subject font-green-sharp bold uppercase">
                {{ 'admin.downloads.new'|trans }}
            </span>
        {% endblock %}

        {% block nav_tabs %}
            <li role="presentation" class="active">
                <a href="#geral" aria-controls="geral" role="tab" data-toggle="tab">Geral</a>
            </li>
        {% endblock %}

        {% block tab_pane %}
            <div role="tabpanel" class="tab-pane active" id="geral">
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.imageFile) }}</div>
                    <div class="col-md-6">{{ form_row(form.downloadFile) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-12"><hr></div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.description) }}</div>
                    <div class="col-md-6">
                        {{ form_widget(form.isEnabled, {'attr': {'checked': true}}) }}
                    </div>
                </div>
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block javascripts %}
    {% embed 'admin/_partials/_block_javascripts.html.twig' %}

        {% block page_level_scripts %}
            <script src="{{ asset('admin/assets/pages/scripts/components-bootstrap-switch.min.js') }}"
                    type="text/javascript"></script>
            <script src="{{ asset('admin/assets/pages/scripts/components-date-time-pickers.js') }}"></script>
        {% endblock %}

    {% endembed %}
{% endblock %}