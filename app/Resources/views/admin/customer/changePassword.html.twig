{% extends 'admin/base.html.twig' %}

{% block page_content %}

    {% embed 'admin/_partials/_default_resource.html.twig' with {'route_index' : 'admin_customer_index'} %}

        {% block form_start %}
            {{ form_start(form, {'action': path('admin_customer_change_password', {id: user.id}),
                'attr' : {'class' : '_form-horizontal', 'novalidate': true}}) }}
        {% endblock %}

        {% block icon_list %}
            <i class="icon-key font-green-sharp bold"></i>
        {% endblock %}

        {% block caption_subject %}
            <span class="caption-subject font-green-sharp bold uppercase">
                Cliente {{ user.customer.name }} - {{ 'user.change_password.title'|trans }}
            </span>
        {% endblock %}

        {% block actions %}
            <button type="submit" class="btn green">
                <span class="fa fa-check"></span> Salvar
            </button>
            <a href="{{ path('admin_customer_index') }}" class="btn red _btn-outline">
                <span class="fa fa-remove"></span> Cancelar
            </a>
        {% endblock %}

        {% block nav_tabs %}
            <li role="presentation" class="active">
                <a href="#geral" aria-controls="geral" role="tab" data-toggle="tab">Geral</a>
            </li>
        {% endblock %}

        {% block tab_pane %}
            <div role="tabpanel" class="tab-pane active" id="geral">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.plainPassword.first, {'attr': {'autofocus': true}}) }}
                    </div>
                    <div class="col-md-6">{{ form_row(form.plainPassword.second) }}</div>
                </div>
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}