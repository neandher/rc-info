{% extends 'admin/base.html.twig' %}

{% block page_content %}

    {% embed 'admin/_partials/_default_resource.html.twig' with {'route_index' : 'admin_company_index'} %}

        {% block form_start %}
            {{ form_start(form, {'action': path('admin_company_edit', {id: company.id}) ~ pagination.buildQuery,
                'attr' : {'class' : '_form-horizontal', 'novalidate': true}}) }}
        {% endblock %}

        {% block icon_list %}
            <i class="icon-organization font-green-sharp bold"></i>
        {% endblock %}

        {% block caption_subject %}
            <span class="caption-subject font-green-sharp bold uppercase">
                {{ 'admin.company.edit'|trans }}
            </span>
        {% endblock %}

        {% block actions %}
            {{ form_widget(form.buttons.save_and_keep, {'attr' : {'class' : 'green'}, 'icon' : '<i class="fa fa-check"></i>'}) }}
        {% endblock %}

        {% block nav_tabs %}
            <li role="presentation" class="active">
                <a href="#geral" aria-controls="geral" role="tab" data-toggle="tab">Geral</a>
            </li>
            <li role="presentation">
                <a href="#cobranca" aria-controls="cobranca" role="tab" data-toggle="tab">Cobrança</a>
            </li>
            <li role="presentation">
                <a href="#endereco" aria-controls="endereco" role="tab" data-toggle="tab">Endereço</a>
            </li>
        {% endblock %}

        {% block tab_pane %}
            <div role="tabpanel" class="tab-pane active" id="geral">
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.nomeFantasia) }}</div>
                    <div class="col-md-6">{{ form_row(form.razaoSocial) }}</div>
                    <div class="col-md-6">{{ form_row(form.cnpj) }}</div>
                </div>
            </div>

            <div role="tabpanel" class="tab-pane" id="cobranca">
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.agencia) }}</div>
                    <div class="col-md-6">{{ form_row(form.agenciaDigito) }}</div>
                    <div class="col-md-6">{{ form_row(form.conta) }}</div>
                    <div class="col-md-6">{{ form_row(form.contaDigito) }}</div>
                    <div class="col-md-6">{{ form_row(form.codigoBanco) }}</div>
                    <div class="col-md-6">{{ form_row(form.carteira) }}</div>
                    <div class="col-md-6">{{ form_row(form.codigoCliente) }}</div>
                    <div class="col-md-6">{{ form_row(form.aceite) }}</div>
                    <div class="col-md-6">{{ form_row(form.especieDoc) }}</div>
                    <div class="col-md-6">{{ form_row(form.juros) }}</div>
                    <div class="col-md-6">{{ form_row(form.multa) }}</div>
                    <div class="col-md-6">{{ form_row(form.prazoAposVencimento) }}</div>
                    <div class="col-md-6">{{ form_row(form.codigoProtesto) }}</div>
                    <div class="col-md-6">{{ form_row(form.prazoProtesto) }}</div>
                    <div class="col-md-6">{{ form_row(form.codigoBaixaDevolucao) }}</div>
                    <div class="col-md-6">{{ form_row(form.prazoBaixaDevolucao) }}</div>
                </div>
            </div>

            <div role="tabpanel" class="tab-pane" id="endereco">
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.street) }}</div>
                    <div class="col-md-6">{{ form_row(form.district) }}</div>
                    <div class="col-md-6">{{ form_row(form.city) }}</div>
                    <div class="col-md-6">{{ form_row(form.zipCode) }}</div>
                    <div class="col-md-6">{{ form_row(form.uf) }}</div>
                </div>
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block javascripts %}
    {% embed 'admin/_partials/_block_javascripts.html.twig' %}
        {% block page_level_scripts %}
            <script src="{{ asset('bower_components/jquery.inputmask/dist/jquery.inputmask.bundle.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}