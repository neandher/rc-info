{% extends 'admin/base.html.twig' %}

{% block body %}

    <h3>{{ 'user.resetting.reset.title'|trans }}</h3>

    {{ form_start(form, { 'action': path('admin_resetting_reset', {'token' : token}), 'attr': {'novalidate': 'novalidate'} }) }}

    <div class="row">
        <div class="col-lg-12">

            {{ include('_partials/_alerts.html.twig') }}

            {{ form_errors(form) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <div class="row">
                <div class="form-group col-md-6">
                    <button class="btn btn-primary">{{ 'user.resetting.reset.btns.send'|trans }}</button>

                    <a class="pull-right"
                       href="{{ path('admin_login') }}">{{ 'user.resetting.request.links.login'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ form_widget(form._token) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}